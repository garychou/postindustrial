header.navbar .site-name
  font-size: 0.8rem
  font-weight: 600
  letter-spacing: 0.1em
  text-transform: uppercase
  color: #999

header.navbar .site-name::before
  content: "Post-Industrial "
  color: #000;

.navbar .nav-item a.nav-link
  font-family: avenir next,avenir,sans-serif
  color: rgba(0,0,0,.5)
  opacity: 1
  outline: 0
  background-color: transparent
  font-size: 0.875rem
  padding: 0.4rem

header.navbar .nav-item
  margin-left: 2rem

.navbar .nav-item a.nav-link
  &:hover, &:link, &:visited
    transition: color .15s ease-in
  font-weight: 500

.links .nav-item > a:not(.external):hover
  background-color: #F6E3FC
  color: #5e2ca5
  margin-bottom: 0
  border-bottom: 0
  border-radius: 5px

.links .nav-item > a:not(.external).router-link-active
  margin-bottom: 0
  border-bottom: 0
  background-color: #F6E3FC
  padding: 0.4rem 0.6rem
  border-radius: 5px
  @media (min-width: 719px)
    margin-bottom: 0
    border-bottom: 0

.homepage header.navbar .site-name
  display: none

.entrepreneurialdesign li
  margin-left: 1rem
  padding-left: 0.5rem

body
  background: #f9f9fb
  background: #fff

svg.icon.outbound
  display: none

a
  font-weight: 600

a.header-anchor
  display: none


/* colors */

.entrepreneurialdesign a
  color: #2c69a5;

.entrepreneurialdesign .links .nav-item > a:hover, .entrepreneurialdesign .links .nav-item > a:not(.external).router-link-active
  background: #e3f8fc
  color: #2c69a5

.year5 .sidebar a, .navbar .links .nav-item a.nav-link:not(.router-link-active)
  color: #808080

.year5 .sidebar a.active.sidebar-link, .year5 .navbar .links .nav-item a.router-link-active
  color: #330933
  border-color: transparent

.year5 .sidebar a, .navbar .links .nav-item a.nav-link:not(.router-link-active)
  color: #808080

.teachthe1k .links .nav-item > a:hover, .teachthe1k .links .nav-item > a:not(.external).router-link-active,
.t1kguide .links .nav-item > a:hover, .t1kguide .links .nav-item > a:not(.external).router-link-active
  background: #e3fce6
  color: #33a52c

.teachthe1k .sidebar a.active.sidebar-link, .year5 .teachthe1k .links .nav-item a.router-link-active,
.t1kguide .sidebar a.active.sidebar-link, .year5 .t1kguide .links .nav-item a.router-link-active
  color: #33a52c
  border-color: transparent

.teachthe1k a, .t1kguide a
  color: #33a52c

.sidebar-heading
  display: none

ul.sidebar-links li a.sidebar-link
  font-family: avenir next, avenir, sans-serif
  font-size: 1.1rem

ul.sidebar-links li a.sidebar-link.active
  border-left-color: transparent

.sidebar-group.is-sub-group > .sidebar-group-items > li > a.sidebar-link

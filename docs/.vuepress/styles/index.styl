header.navbar .site-name
  font-size: 0.8rem
  font-weight: 600
  letter-spacing: 0.1em
  text-transform: uppercase
  color: #999

header.navbar .site-name::before
  content: "Post-Industrial "
  color: #000;

.navbar .nav-item a.nav-link
  font-family: avenir next,avenir,sans-serif
  color: rgba(0,0,0,.5)
  opacity: 1
  outline: 0
  background-color: transparent
  font-size: 0.875rem
  padding: 0.4rem

header.navbar .nav-item
  margin-left: 2rem

.navbar .nav-item a.nav-link
  &:hover, &:link, &:visited
    transition: color .15s ease-in
  font-weight: 500

.links .nav-item > a:not(.external):hover
  background-color: #F6E3FC
  color: #5e2ca5
  margin-bottom: 0
  border-bottom: 0
  border-radius: 5px

.links .nav-item > a:not(.external).router-link-active
  margin-bottom: 0
  border-bottom: 0
  background-color: #F6E3FC
  color: #5e2ca5
  padding: 0.4rem 0.6rem
  font-weight: 600
  border-radius: 5px
  @media (min-width: 719px)
    margin-bottom: 0
    border-bottom: 0

.homepage header.navbar .site-name
  display: none

.entrepreneurialdesign li
  margin-left: 1rem
  padding-left: 0.5rem

.entrepreneurialdesign .sidebar-heading.open
  display: none

.year5 .sidebar-heading.open
  display: none

body
  background: #f9f9fb
  background: #fff

svg.icon.outbound
  display: none

a
  font-weight: 600

a.header-anchor {
    display: none
}

.year5 .sidebar
  border: none
  font-family: avenir next, avenir, sans-serif
  font-size: 0.95rem
